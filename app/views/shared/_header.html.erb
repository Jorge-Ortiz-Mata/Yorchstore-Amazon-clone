<nav class="ui black inverted menu" style="display: flex">
    <div style="display: flex">
        <img src="<%= asset_path( 'y-link.png' ) %>" height="60px">
        <%= link_to "Yorchstore", root_path, class:"active item" %>
    </div>
    <div class="right menu">
    <% if !current_user %>
        <%= link_to "Sign in", new_user_session_path, class:"block mt-4 lg:inline-block lg:mt-0 text-white hover:text-cyan-200 mr-4", class:"item" %>
        <%= link_to "Sign up", new_user_registration_path, class:"block mt-4 lg:inline-block lg:mt-0 text-white hover:text-cyan-200 mr-4", class:"item" %>
    <% else %>
        <% if !current_user.profile.nil? %>
            <%= link_to "My car", car_path, class:"item" %>
            <%= link_to "My products", my_products_path, class:"item" %>
            <%= link_to "@ #{current_user.profile.first_name} #{current_user.profile.last_name}", profile_path(current_user.profile), class:"item" %>
        <% end %>
        <%= link_to "Sign out", destroy_user_session_path, "data-turbo-method": :delete, class:"item" %> 
    <% end %>
    </div>
</nav>