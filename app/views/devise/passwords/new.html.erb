<div style="display: flex; flex-direction: column; margin: 150px 50px 100px 50px; padding: 30px;">
  <div style="margin: 0px auto 50px auto;">
    <h2>Forgot your password?</h2>
  </div>

  <div class="ui form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": false, method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@company.com" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class:"ui green button" %>
      </div>
      <br>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
