<div style="display: flex; flex-direction: column; margin: 150px 50px 100px 50px; padding: 30px;">
  <div style="margin: 0px auto 50px auto;">
    <h2>Resend confirmation instructions</h2>
  </div>
  <h2>Change your password</h2>
  <div class="ui form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": false, method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <br>
      <div class="field">
        <%= f.label :password, "New password" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Change my password", class:"ui blue button" %>
      </div>
      <br>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
