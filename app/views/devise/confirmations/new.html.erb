<div style="display: flex; flex-direction: column; margin: 150px 50px 100px 50px; padding: 30px;">
  <div style="margin: 0px auto 50px auto;">
    <h2>Resend confirmation instructions</h2>
  </div>
  <div class="ui form">
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { "data-turbo": false, method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: "example@company.com", autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>
      <br>
      <div class="actions">
        <%= f.submit "Resend confirmation instructions", class: "ui green button" %>
      </div>
      <br>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>