<div id="<%= dom_id article %>">
<br>
  <p>
    <strong>ID:</strong>
    <%= article.id %>
  </p>
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= article.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= article.price %>
  </p>

  <p>
    <strong>Stock:</strong>
    <%= article.stock %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= article.user.profile.first_name %> <%= article.user.profile.last_name %>
  </p>

  <p>
    <% for i in 0...article.images.length %>
      <%= image_tag(article.images[i], width: 100) %>
    <% end %>
  </p>

    <p>
      <% if article.user == @current_user_and_article %>
        <%= link_to "Edit this article", edit_article_path(article) %>
        <%= button_to "Delete article", article, method: :delete, form: {data: {turbo_confirm: 'Are you sure?'}} %>
      <% else %>
        <%= link_to "Show", article if !(request.path === article_path(article)) %>
      <% end %>
    </p>
</div>
