<%= turbo_frame_tag dom_id(article) do %>
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= article.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= article.price %>
  </p>

  <p>
    <% for i in 0...article.images.length %>
      <%= image_tag(article.images[i], width: 100) %>
    <% end %>
  </p>

  <div>
    <%= link_to "Edit article", edit_article_path(article) %>
    <%= button_to "Delete article", article, method: :delete, form: {data: {turbo_confirm: "Are you sure?"}} %>
  </div>

<% end %>