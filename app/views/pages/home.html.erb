<%= turbo_stream_from "articles" %>
<h1>Yorchstore</h1>
<%# if current_user.profile.user_card === 'Seller' %>
<div>
    <h3>
        Create a new post:
    </h3>
    <div>
        <%#= turbo_frame_tag "article_form" do %>
            <%#= render "articles/form", article: @article %>
        <%# end %>
        <%= link_to "New article", new_article_path %>
    </div>
</div>
<%# end %>
<div>
    <h3>
        All articles.
    </h3>
    <div>
    <div id="articles">
        <% @articles.each do |article| %>
            <%= render article %>
        <% end %>
    </div>
        <%#= turbo_frame_tag "articles" do %>
            <%#= render @articles %>
        <%# end %>
    </div>
</div>