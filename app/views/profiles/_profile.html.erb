<div id="<%= dom_id profile %>">
  <p>
    <strong>First name:</strong>
    <%= profile.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= profile.last_name %>
  </p>

  <p>
  <%= image_tag(profile.avatar, width: 200 ) if profile.avatar.attached? %>
      <% if !profile.avatar.attached? %>
        <img src="<%= asset_path( 'no-profile.png' ) %>" width= "200px">
      <% end %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= profile.location %>
  </p>

  <p>
    <strong>Genre:</strong>
    <%= profile.genre %>
  </p>

  <p>
    <strong>Cellphone:</strong>
    <%= profile.cellphone %>
  </p>

  <p>
    <strong>Bank account:</strong>
    <%= profile.bank_account %>
  </p>

  <p>
    <strong>Bank money:</strong>
    <%= profile.bank_money %>
  </p>

  <p>
    <strong>User card:</strong>
    <%= profile.user_card %>
  </p>

  <p>
    <strong>Birth:</strong>
    <%= profile.birth %>
  </p>

</div>
